<script>
  import Glide from "@glidejs/glide";

  const $slider = document.querySelector("#talent-glide");
  const glide = new Glide(".glide", {
    type: "carousel",
    startAt: 0,
    perView: 13,
    focusAt: "center",
  }).mount();

  $slider?.addEventListener("click", (e) => {
    const itemSelected = e.target as HTMLElement;
    const isItem = itemSelected.tagName === "LI";

    const item = isItem ? itemSelected : itemSelected.closest("li");
    const index = item?.dataset.indexSlide;

    glide.go(`=${index}`);
  });
</script>

